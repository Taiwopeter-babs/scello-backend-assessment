    "@types/passport-local": "^1.0.38",
    "@types/swagger-ui-express": "^4.1.7",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@types/node": "^22.10.10",
